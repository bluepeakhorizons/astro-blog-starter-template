---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Blue Peak Horizons LLC - FedRAMP & Cybersecurity Consulting Services" />
    <title>Blue Peak Horizons LLC</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <header>
      <div class="container">
        <h1>Blue Peak Horizons LLC</h1>
        <p class="tagline">Your trusted partner in FedRAMP and Cybersecurity consulting</p>
      </div>
    </header>

    <main>
      <section id="about">
        <div class="container">
          <h2>About Us</h2>
          <p>
            Blue Peak Horizons LLC specializes in providing high-quality cybersecurity consulting services, including FedRAMP assessments, RMF compliance, and secure software development guidance. Our mission is to help organizations achieve robust security posture while simplifying compliance.
          </p>
        </div>
      </section>

      <section id="services">
        <div class="container">
          <h2>Our Services</h2>
          <ul>
            <li>FedRAMP Initial Assessment & Gap Analysis</li>
            <li>Security Control Implementation & Documentation</li>
            <li>Continuous Monitoring & Risk Management</li>
            <li>Supply Chain Security Consulting</li>
            <li>Cybersecurity Policy & SOP Development</li>
          </ul>
        </div>
      </section>

      <section id="contact">
        <div class="container">
          <h2>Contact Us</h2>
          <p>Email: <a href="mailto:info@bluepeakhorizons.com">info@bluepeakhorizons.com</a></p>
          <p>Phone: (555) 123-4567</p>
          <p>Based in Rhode Island, serving clients nationwide</p>
        </div>
      </section>
    </main>

    <footer>
      <div class="container">
        <p>&copy; 2025 Blue Peak Horizons LLC. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
